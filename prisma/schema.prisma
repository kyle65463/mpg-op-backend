generator client {
  provider = "prisma-client-js"
  output   = "./pg"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model NativeProduct {
  id        String
  name      String
  source    String
  region    String
  packages  NativePackage[]
  productId Int?
  product   Product?        @relation(fields: [productId], references: [id])
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  orders    Order[]

  @@id([id, source])
  @@map("native_products")
}

model NativePackage {
  id              String
  name            String
  source          String
  region          String
  nativeProductId String
  nativeProduct   NativeProduct @relation(fields: [nativeProductId, source], references: [id, source], onDelete: Cascade)
  packageId       Int?
  package         Package?      @relation(fields: [packageId], references: [id])
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  order           Order[]

  @@id([id, source])
  @@map("native_packages")
}

model Product {
  id             Int             @id @default(autoincrement())
  name           String
  region         String
  packages       Package[]
  nativeProducts NativeProduct[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  @@map("products")
}

model Package {
  id             Int             @id @default(autoincrement())
  name           String
  region         String
  productId      Int
  product        Product         @relation(fields: [productId], references: [id], onDelete: Cascade)
  nativePackages NativePackage[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  @@map("packages")
}

model Order {
  id          Int      @id @default(autoincrement())
  status      String
  quantity    Int
  customer    Json
  bookedAt    DateTime
  departureAt DateTime
  nativeId    String

  nativeProduct   NativeProduct @relation(fields: [nativeProductId, nativeProductSource], references: [id, source])
  nativeProductId String
  nativePackage   NativePackage @relation(fields: [nativePackageId, source], references: [id, source])
  nativePackageId String
  source          String
  region          String

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  nativeProductSource String

  @@unique([nativeId, source])
  @@map("orders")
}
